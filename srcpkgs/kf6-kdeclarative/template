# Template file for 'kf6-kdeclarative'
pkgname=kf6-kdeclarative
version=6.23.0
revision=1
build_style=cmake
configure_args="-DKDE_INSTALL_QMLDIR=lib/qt6/qml"
hostmakedepends="extra-cmake-modules qt6-tools qt6-base
 qt6-declarative-host-tools gettext qt6-shadertools kf6-kconfig"
makedepends="kf6-kconfig-devel kf6-kglobalaccel-devel kf6-ki18n-devel
 kf6-kwidgetsaddons-devel kf6-kguiaddons-devel qt6-shadertools-devel
 qt6-declarative-devel"
short_desc="KDE Integration of QML and KDE work spaces"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://invent.kde.org/frameworks/kdeclarative"
distfiles="${KDE_SITE}/frameworks/${version%.*}/${pkgname#kf6-}-${version}.tar.xz"
checksum=058cbd95b6b8e163505e923b5866f87bad50847ea0c886ea7601d6cbd0025ba2

kf6-kdeclarative-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} kf6-kconfig-devel
	 qt6-declarative-devel"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
