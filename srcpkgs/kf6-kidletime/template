# Template file for 'kf6-kidletime'
pkgname=kf6-kidletime
version=6.23.0
revision=1
build_style=cmake
configure_args="-DKDE_INSTALL_QMLDIR=lib/qt6/qml
 -DKDE_INSTALL_QTPLUGINDIR=lib/qt6/plugins"
hostmakedepends="extra-cmake-modules qt6-tools qt6-base
 wayland-devel pkg-config"
makedepends="plasma-wayland-protocols wayland-protocols
 libXScrnSaver-devel qt6-base-private-devel"
short_desc="Framework for detection and notification of device idle time"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://invent.kde.org/frameworks/kidletime"
distfiles="${KDE_SITE}/frameworks/${version%.*}/${pkgname#kf6-}-${version}.tar.xz"
checksum=4d5e9086d260c9550f1d732d2f6481d34517ba9f571f2e7d76ed9887adb2c97b

kf6-kidletime-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} qt6-base-devel"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
